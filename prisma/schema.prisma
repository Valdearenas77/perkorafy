generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  perks     Int      @default(0)
  canjes    Canje[]
}

model Perk {
  nombre      String
  descripcion String
  puntos      Int
  imagen      String?
  createdAt   DateTime @default(now())
  id          Int      @id @default(autoincrement())
  canjes      Canje[]
}

model Canje {
  usuarioId Int
  estado    String   @default("pendiente")
  fecha     DateTime @default(now())
  id        Int      @id @default(autoincrement())
  perkId    Int
  perk      Perk     @relation(fields: [perkId], references: [id])
  usuario   User     @relation(fields: [usuarioId], references: [id])
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}
